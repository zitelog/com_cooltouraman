<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			label="COM_COOLTOURAMAN_SEARCH_STUDENTS"
			description="COM_COOLTOURAMAN_SEARCH_STUDENTS"
			hint="JSEARCH_FILTER"
			class="js-stools-search-string"
		/>
		<field
			name="range"
			type="registrationdaterange"
			label="COM_USERS_OPTION_FILTER_DATE"
			description="COM_USERS_OPTION_FILTER_DATE"
			onchange="this.form.submit();"
			>
			<option value="">COM_USERS_OPTION_FILTER_DATE</option>
		</field>
	</fields>
	<fields name="list">
		<field
			name="fullordering"
			type="list"
			label="COM_CONTENT_LIST_FULL_ORDERING"
			description="COM_CONTENT_LIST_FULL_ORDERING_DESC"
			onchange="this.form.submit();"
			default="a.title ASC"
			>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="a.firstname ASC">COM_COOLTOURAMAN_STUDENT_HEADING_FIRSTNAME_ASC</option>
			<option value="a.firstname DESC">COM_COOLTOURAMAN_STUDENT_HEADING_FIRSTNAME_DESC</option>
			<option value="a.lastname ASC">COM_COOLTOURAMAN_STUDENT_HEADING_LASTNAME_ASC</option>
			<option value="a.lastname DESC">COM_COOLTOURAMAN_STUDENT_HEADING_LASTNAME_DESC</option>
			<option value="a.parental_firstname ASC">COM_COOLTOURAMAN_STUDENT_HEADING_PARENT_FIRSTNAME_ASC</option>
			<option value="a.parental_firstname DESC">COM_COOLTOURAMAN_STUDENT_HEADING_PARENT_FIRSTNAME_DESC</option>
			<option value="a.parental_lastname ASC">COM_COOLTOURAMAN_STUDENT_HEADING_PARENT_LASTNAME_ASC</option>
			<option value="a.parental_lastname DESC">COM_COOLTOURAMAN_STUDENT_HEADING_PARENT_LASTNAME_DESC</option>
			<option value="a.email ASC">COM_COOLTOURAMAN_STUDENT_HEADING_EMAIL_ASC</option>
			<option value="a.email DESC">COM_COOLTOURAMAN_STUDENT_HEADING_EMAIL_DESC</option>
			<option value="a.register_date ASC">COM_COOLTOURAMAN_STUDENT_HEADING_REGISTRATION_DATE_ASC</option>
			<option value="a.register_date DESC">COM_COOLTOURAMAN_STUDENT_HEADING_REGISTRATION_DATE_DESC</option>
			<option value="a.id ASC">JGRID_HEADING_ID_ASC</option>
			<option value="a.id DESC">JGRID_HEADING_ID_DESC</option>
		</field>
		<field
			name="limit"
			type="limitbox"
			class="input-mini"
			default="25"
			label="COM_CONTENT_LIST_LIMIT"
			description="COM_CONTENT_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/>
	</fields>
</form>